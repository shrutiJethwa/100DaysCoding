class Solution {
    public String mergeAlternately(String word1, String word2) {
        String s="";
        
        int n1=word1.length();
        int n2=word2.length();
        
        for(int i=0; i<n1||i<n2; i++)
        {
            if(i<n1) {
              s+=word1.charAt(i);  
        }  
            if(i<n2)  {
              s+=word2.charAt(i);
            }
               
        }
        
        return s;
    }
}
